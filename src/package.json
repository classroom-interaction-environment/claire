{
  "name": "caro-core",
  "private": true,
  "scripts": {
    "startup": "echo run startup",
    "postinstall": "echo postinstall script",
    "start": "echo 'meteor run'; meteor run",
    "csslint": "csslint --quiet --ignore=node_modules ./imports",
    "lint:code": "standardx . -v | snazzy",
    "lint:code-fix": "standardx --fix | snazzy",
    "lint:security": "standardx | snazzy",
    "lint:security-fix": "standardx --fix | snazzy",
    "lint:style": "stylelint \"**/*.scss\"",
    "lint:style-fix": "stylelint --fix \"**/*.scss\"",
    "lint:markdown": "markdownlint \"**/*.md\" --config ./.markdownlint.json",
    "lint:markdown-fix": "markdownlint --fix \"**/*.md\" --config ./.markdownlint.json",
    "build:docs": "jsdoc ./ -c ./jsdoc.json -r -d ../docs/api --readme ../README.md",
    "pretest-watch": "echo *****prestest*****",
    "visualize": "meteor --production --extra-packages bundle-visualizer,dynamic-import,zodern:profile-require --settings=settings.json",
    "kill": "kill -9 `ps ax | grep node | grep meteor | awk '{print $1}'`"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "dependencies": {
    "@babel/runtime": "^7.17.8",
    "@fortawesome/fontawesome-free": "^6.1.1",
    "bcrypt": "^5.0.1",
    "bootstrap": "^4.6.1",
    "clipboard": "^2.0.10",
    "debounce": "^1.2.1",
    "deepmerge": "^4.2.2",
    "dely": "^1.0.2",
    "dragscroll": "0.0.8",
    "driver.js": "^0.9.8",
    "ffmpeg-cli": "^2.7.5",
    "file-type": "^16.5.4",
    "gm": "^1.23.1",
    "gridfs-stream": "^1.1.1",
    "helmet": "6.0.0",
    "interactjs": "^1.10.11",
    "jquery": "^3.6.0",
    "lozad": "^1.16.0",
    "meteor-node-stubs": "^1.2.1",
    "mime-types": "^2.1.35",
    "minimist": "^1.2.6",
    "pdfjs-dist": "^2.14.305",
    "pdfobject": "^2.2.7",
    "plotly.js-dist": "^2.11.1",
    "popper.js": "^1.16.1",
    "print-js": "^1.6.0",
    "qrcode": "^1.5.0",
    "simpl-schema": "^1.12.0",
    "sortablejs": "^1.15.0",
    "trix": "^2.0.0-alpha.1",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.17.0",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.1.1",
    "chai": "^4.3.6",
    "eslint": "^8.12.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.5.0",
    "jsdoc": "^3.6.10",
    "markdownlint-cli": "^0.31.1",
    "puppeteer": "^13.5.1",
    "sinon": "^13.0.1",
    "snazzy": "^9.0.0",
    "standardx": "^7.0.0",
    "stylelint": "^14.6.1",
    "stylelint-config-sass-guidelines": "^9.0.1"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "babel": {
    "env": {
      "COVERAGE": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module",
      "allowImportExportEverywhere": true
    },
    "env": {
      "es6": true,
      "mocha": true
    },
    "globals": {
      "Promise": "readonly",
      "AutoForm": "readonly"
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup",
        {
          "allowSingleLine": true
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  }
}
